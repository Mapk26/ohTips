<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <include layout="@layout/base_dialog" />

    <LinearLayout
        android:id="@+id/lyt_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/amber_400"
            android:paddingLeft="@dimen/mlarge"
            android:paddingRight="@dimen/mlarge"
            android:text="@string/ohtips_btn_ok"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_dont_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@color/grey_300"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/xsmall">


        <CheckBox
            android:id="@+id/chkDontShow"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/ohtips_donotshow"
            android:textAlignment="textStart" />

    </LinearLayout>



</LinearLayout>